datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Meetup {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  tags        String[]
  time        DateTime
  location    String
  userId      Int
  user        User     @relation(fields: [userId], references: [id])
}

model User {
  id             Int       @id @default(autoincrement())
  email          String    @unique
  password       String
  name           String
  role           Role
  meetups        Meetup[]
}

enum Role {
  USER
  ORGANIZER
}
